@model IEnumerable<WebStore.Domain.Entities.Product>
@{
    ViewBag.Title = "Products List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(expression: model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(expression: model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(expression: model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(expression: model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(expression: model => model.BrandId)
            </th>
            <th>
                @Html.DisplayNameFor(expression: model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(expression: model => model.Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(expression: modelItem => item.Id)
                </th>
                <th>
                    @Html.DisplayFor(expression: modelItem => item.Name)
                </th>
                <th>
                    @Html.DisplayFor(expression: modelItem => item.Order)
                </th>
                <th>
                    @Html.DisplayFor(expression: modelItem => item.CategoryId)
                </th>
                <th>
                    @Html.DisplayFor(expression: modelItem => item.BrandId)
                </th>
                <th>
                    @Html.DisplayFor(expression: modelItem => item.ImageUrl)
                </th>
                <th>
                    @Html.DisplayFor(expression: modelItem => item.Price)
                </th>
            </tr>
        }
    </tbody>
</table>

