
@{
    ViewBag.Title = "Product details | My E-Shopper";
}


<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @await Html.PartialAsync(partialViewName:"Partial/_LeftSideBar")
                
            </div>

            <div class="col-sm-9 padding-right">
                
                @await Html.PartialAsync(partialViewName: "Partial/_ProductDetails")

                @await Html.PartialAsync(partialViewName: "Partial/_ProductDetailsCategoryTab")

                @await Html.PartialAsync(partialViewName: "Partial/_ProductDetailsRecommendedItems")

            </div>
        </div>
    </div>
</section>

